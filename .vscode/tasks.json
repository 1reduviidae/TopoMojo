{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "webpack",
            "command": "dotnet msbuild src/TopoMojo.Web/TopoMojo.Web.csproj /t:WebpackDev",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "api-gen",
            "command": "node src/TopoMojo.Web/swagger-ng.js -u http://localhost:5004/docs/v1/api.json -o src/TopoMojo.Web/ClientApp/app/api -m TermSkipTakeSortFilters:Search",           "type": "shell",
            "group": "build",
            "problemMatcher": "$tsc"
        }
    ]
}