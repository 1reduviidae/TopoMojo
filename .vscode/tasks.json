{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "api-gen",
            "command": "node src/topomojo-app/swagger-ng.js -u http://localhost:5004/openapi/v1/api.json -o src/topomojo-app/src/app/api -m TermSkipTakeSortFilters:Search",
            "type": "shell",
            "group": "build",
            "problemMatcher": "$tsc"
        }
    ]
}
